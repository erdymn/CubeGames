@model IEnumerable<CubeGamesCase_Model.Models.Product>


<div class="border p-4 bg-white">
    <div class="row">
        <div class="col-9">
            <h2 class="text-info">Product List</h2>
        </div>
        <div class="col-3 text-right">
            <a asp-action="Update_Insert" class="btn btn-info form-control">Create</a>
        </div>
    </div>

    <br>

    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>Product Name</th>
                    <th>Product Category</th>
                    <th>Product Color</th>
                    <th>Product Price</th>
                    <th>Product Stock</th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
            <tr>
                <td>
                    @item.ProductName
                </td>
                <td>
                    @item.Category.CategoryName
                </td>
                <td>
                    @item.ProductColor
                </td>
                <td>
                    @item.ProductPrice
                </td>
                <td>
                    @item.ProductStock
                </td>

                <td>
                    <a class="btn btn-primary text-white" asp-action="Update_Insert" asp-route-Id="@item.ProductId">Update</a>
                    <a class="btn btn-danger text-white" asp-action="Delete" asp-route-Id="@item.ProductId">Delete</a>
                </td>
            </tr>
                }

            </table>
        }
        else
        {
            <p>There is no product.</p>
        }

    </div>
</div>

